section#hero {
  background: no-repeat center / cover
    bgImageMultiType('../../images/caseStudy-hero-bg.jpg');

  div {
    h1 {
      --text: 'Case Studies';
    }
  }
}
section#cases {
  display: grid;
  gap: 50px;
  padding: var(--content-block-padding) var(--content-inline-padding);

  buttons-row {
    display: flex;
    gap: 20px;
    flex-flow: row wrap;
    background: var(--black);
    color: var(--white);
    border-radius: 30px;
    padding: 30px 40px;
    width: fit-content;
    margin: auto;

    > button {
      padding: 5px 10px;
      text-decoration: underline transparent;
      text-underline-offset: 10px;

      @media (hover: hover) {
        &:hover {
          color: var(--yellow);
          background: none;
          text-underline-offset: 7px;
          text-decoration-color: var(--yellow);
        }
      }
      &:focus {
        color: var(--yellow);
        background: none;
        text-underline-offset: 7px;
        text-decoration-color: var(--yellow);
      }
    }

    button {
      --attr-type: 'button';
      --text: 'All';
    }
    button {
      --attr-type: 'button';
      --text: 'Taxes & Efficiency';
    }
    button {
      --attr-type: 'button';
      --text: 'Investment banking';
    }
    button {
      --attr-type: 'button';
      --text: 'Financial Plan';
    }
    button {
      --attr-type: 'button';
      --text: 'Audit & Evaluation';
    }
  }

  gallery-block {
    margin-inline: @769 calc(-1 * var(--content-inline-padding));
    border-radius: 20px;
    background: var(--gray);

    gallery-item {
      a {
        --attr-href: './caseStudy.html';
        --attrs: "target='_blank' rel='noopener noreferrer'";

        overlay-content {
          strong {
            --text: 'Taxes & Efficiency';
          }

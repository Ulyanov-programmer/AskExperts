section#hero {
  background: no-repeat center / cover
    bgImageMultiType('../../images/team-hero-bg.jpg');

  div {
    highlighted-text.yellow {
      --text: 'Team';
    }
    h1 {
      --text: 'The Consultors';
    }
  }
}
section#team {
  display: grid(40px);

section#talk {
  display: grid(10px);
  justify-items: start;
  margin: var(--content-block-padding) var(--content-inline-padding);
  background: no-repeat center right / auto 100%
      url('../../images/contact-bg.webp'),
    var(--black);
  color: var(--white);
  border-radius: 30px;
  padding: clamp(20px, pxToVw(80px), 80px) clamp(30px, pxToVw(100), 100px);

  header-section {
    highlighted-text.gray {
      --text: 'Contact';
    }
    h2 {
      --text: 'Ready To Talk?';
    }
    p {
      --text: 'Posuere sollicitudin aliquam ultrices sagittis orci a scelerisque. Massa placerat duis ultricies lacus sed turpis. Pellentesque  pellentesque habitant morbi tristique.';
    }
    form[action='#'] {
      input {
        --attr-type: 'email';
        --attr-placeholder: 'Your E-mail';
        --attrs: "required name='contact-mail'";
      }
      button.green {
        --attr-type: 'submit';
        --text: 'Send Message';
      }
    }
  }
  @media (width <= 426px) {
    text-align: center;
    justify-items: center;

    form {
      justify-content: center;
    }
  }

  > * {
    max-width: 500px;
  }

  h2,
  p {
    color: var(--white);
    text-shadow: 0 0 7px #000;
  }
  form {
    margin-top: 15px;
  }
}

section#about-teammate {
  text-block {
    header {
      --hor-gap: 30px;

      display: inline-grid;
      gap: 10px var(--hor-gap);
      grid-template:
        'name socials' auto
        'post post' auto
        / 1fr 1fr;
      align-items: center;
      justify-items: start;

      @media (width <= 1240px) {
        grid-template:
          'name' auto
          'post' auto
          'socials' auto
          / 1fr;
      }
      @media (width <= 769px) {
        margin: auto;
        justify-items: center;
      }

      h2 {
      }
      small {
      }
      socials-block {
      }
    }
  }
}

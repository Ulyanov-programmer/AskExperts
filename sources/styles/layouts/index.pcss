section#about-us {
  display: grid(65px) @1100 flex(65px, column-reverse nowrap);
  grid-template-columns: 0.8fr 1.2fr @1440 1fr 1fr;
  padding: var(--content-block-padding) var(--content-inline-padding);

  text-block {
    display: flex(15px, column nowrap);
    justify-items: start;
    align-items: start;

    highlighted-text.yellow {
      --text: 'About us';
    }

    h2 {
      --text: 'About our Consulting Agency Team';
    }

    strong {
      --text: 'We create experiences and build products that make business grow';
      font-weight: 700;
      font-size: 18px;
      color: var(--black);
      line-height: 1.4;
    }

    p {
      --text: 'Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.';
    }

    footer {
      display: grid;
      gap: 20px @500 10px;
      grid-template-columns: 1fr 1fr @500 1fr;
      border-top: 1px solid #d8d8d8;
      border-bottom: 1px solid #d8d8d8;
      color: var(--black);
      margin-top: 25px;
      padding-block: 15px;
      width: @1440 100%;

      > :first-child {
        position: relative;
        margin-right: 20px @500 0px;

        &:after {
          position: absolute(0 -20px auto auto);
          height: 100%;
          width: 1px;
          background: #d8d8d8;
          display: inline-block;
          content: '' @500 none;
        }
      }

      advantage-block {
        span {
          --text: '400+';

          &:nth-child(1):before {
            content: url('../../images/icons/yellowStar.svg');
          }
        }

        strong {
          --text: 'Business Services';
        }
      }

      advantage-block {
        span {
          --text: '100+';

          &:nth-child(2):before {
            content: url('../../images/icons/happyCustomer.svg');
          }
        }

        strong {
          --text: 'Happy Customers';
        }
      }
    }
  }

  images-block {
    min-height: 400px @426 250px;
    background: no-repeat 0% 100% / 40% url('../../images/marketplace.svg'),
      no-repeat center right / 80% url('../../images/about-us.webp'),

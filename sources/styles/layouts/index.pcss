section#feedback {
  display: grid(20px);
  justify-items: center;
  text-align: center;
  margin: var(--content-block-padding) auto;
  max-width: 700px;
  margin-inline: @769 var(--content-inline-padding);

  highlighted-text.green {
    --text: 'Client Feedback';
  }

  .swiper#feedback-text {
    max-width: 100%;

    .swiper-wrapper {
      .swiper-slide {
        h3 {
          muted-text {
            --text: 'Lorem ipsum dolor sit amet, consectetur';
          }
          span {
            --text: 'adipiscing elit, sed do eiusmod';
          }
          muted-text {
            --text: 'tempor incididunt ut labore et dolore';
          }
          &:before {
            content: '“';
            opacity: 0.6;
          }
          &:after {
            content: '”';
            opacity: 0.6;
          }
        }
      }
      .swiper-slide {
        h3 {
          muted-text {
            --text: 'Lorem ipsum ';
          }
          span {
            --text: 'elit, sed do eiusmod';
          }
          muted-text {
            --text: 'tempor incididunt';
          }
        }
      }
    }
  }

  main-slider {
    margin-top: 20px;
    display: grid(clamp(30px, pxToVw(90), 90px));
    align-items: center;
    grid-template: auto / auto 1fr auto;

    @media (width <= 768px) {
      grid-template:
        'prev next' auto
        'slider slider' auto
        / 1fr 1fr;
    }

    button.gray.withIcon.feedback-prev {
      --attr-type: 'button';

      justify-self: start @769 right;
      grid-area: @769 prev;

      img {
        --attr-src: './images/icons/toLeft.svg';
        --attrs: "loading='lazy' alt=''";
        --text-after: 'Prev';
      }
    }

    .swiper#feedback-slider {
      max-width: 100%;
      grid-area: @769 slider;

      .swiper-wrapper {
        .swiper-slide {
          div {
            display: grid(15px);
            justify-items: center;

            picture {
              border-radius: 50%;
              aspect-ratio: 1/1;
              max-width: 300px;
              margin-bottom: 15px;

              img {
                --attr-src: './images/client.png';
                --attrs: "loading='lazy' alt=''";
                size: 100%;
              }
            }

            small {
              --text: 'Web Designer';
              color: var(--green);
              font-weight: 600;
            }

            strong {
              font-family: Cabin;
              font-weight: 600;
              font-size: 20px;
              color: var(--black);
              --text: 'Kathleen Smith';
            }
          }
        }
        .swiper-slide {
          div {
            picture {
              img {
                --attr-src: './images/client.png';
                --attrs: "loading='lazy' alt=''";
              }
            }

            small {
              --text: 'Web Designer';
            }

            strong {
              --text: 'Kathleen Smith';
            }
          }
        }
      }
    }

    button.gray.withIcon.feedback-next {
      --attr-type: 'button';
      --text: 'Next';

      justify-self: end @769 left;
      grid-area: @769 next;

      img {
        --attr-src: './images/icons/yellowToRight.svg';
        --attrs: "loading='lazy' alt=''";
      }
    }
  }
}


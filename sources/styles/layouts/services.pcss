section#contact {
  text-block {
    header-section {
      highlighted-text.yellow {
        --text: 'Proccess';
      }
      h2 {
        --text: 'Contact Us. Itâ€™s Easy.';
      }
      p {
        --text: 'Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.';
      }
    }

    aside {
      ul {
        three-section-block[role='listitem'][revert] {
          img {
            --attr-src: './images/icons/yellow_yellow-bg_tel.svg';
            --attrs: "loading='lazy' alt=''";
          }

          strong {
            a {
              --attr-href: 'tel:+88005553535';
              --text: '+1 800 100 900';
            }
          }
          p {
            --text: 'Call Today';
          }
        }
        three-section-block[role='listitem'][revert] {
          img {
            --attr-src: './images/icons/greenClocks.svg';
            --attrs: "loading='lazy' alt=''";
          }

          strong {
            --text: '9AM - 5PM';
          }
          p {
            --text: 'Monday To Friday';
          }
        }
        three-section-block[role='listitem'][revert] {
          img {
            --attr-src: './images/icons/grayLocation.svg';
            --attrs: "loading='lazy' alt=''";
          }

          strong {
            address {
              --text: '195 Devonshire St Boston, MA 02110';
            }
          }
          p {
            --text: 'USA Office';
          }
        }
      }
    }
  }

  form[action='#'].two-columns {
    label {
      --text: 'Full Name';
      input {
        --attr-type: 'text';
        --attr-placeholder: 'John David';
        --attrs: "required name='contact-name'";
      }
    }
    label {
      --text: 'Email';

      input {
        --attr-type: 'email';
        --attr-placeholder: 'consult@mail.com';
        --attrs: "required name='contact-mail'";
      }
    }
    label {
      --text: 'Phone';

      input {
        --attr-type: 'tel';
        --attr-placeholder: '+008 654 231';
        --attrs: "required name='contact-phone'";
      }
    }
    label {
      --text: 'Company(optional)';

      input {
        --attr-type: 'text';
        --attr-placeholder: 'yourcompany.com';
        --attrs: "name='contact-company-site'";
      }
    }
    label {
      --text: 'Message';

      textarea#contact-text {
        --attr-name: 'contact-text';
        --attr-placeholder: 'Briefly tell us about your project and your current goals. How can we help you?';
      }
    }

    button {
      --attr-type: 'submit';
      --text: 'Send Message';
    }
  }
}
